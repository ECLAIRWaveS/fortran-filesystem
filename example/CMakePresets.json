{
  "version": 2,

"configurePresets": [
{
  "name": "default",
  "generator": "Ninja",
  "binaryDir": "${sourceDir}/build"
}
],
"buildPresets": [
  {
    "name": "default",
    "configurePreset": "default",
    "configuration": "Release"
  }
],
"testPresets": [
  {
    "name": "default",
    "configurePreset": "default",
    "configuration": "Release",
    "output": {
      "outputOnFailure": true,
      "verbosity": "verbose"
    },
    "execution": {
      "noTestsAction": "error",
      "scheduleRandom": true,
      "stopOnFailure": false,
      "timeout": 60
    }
  }
]
}
